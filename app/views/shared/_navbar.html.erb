<header>
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to surveys_path, class: 'navbar-brand' do %>



        <% end -%>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>
            <div class="logo">
              <p>
                <a href="https://www.w3schools.com">

                  <img border="0" alt="W3Schools" src="http://startupcompete.co/business/logo-image/businessid/47148/filename/logo-dfldcrdtegtt.png" width="100" height="100">
                </a>
              </p>
            </div>
          </li>

          <li class="<%= is_active?(surveys_path) %>">
            <%= link_to surveys_path do %>
              Все тесты
              <span class='badge'> <%= surveys_count %> </span>
            <% end -%>
          </li>
          <li class="dropdown <%= is_active?(new_survey_path) %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Новый тест <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li> <%= link_to 'Опрос', new_survey_path(type: 'poll') %> </li>
              <li> <%= link_to 'Открытый вопрос', new_survey_path(type: 'opquestion') %> </li>
              <li> <%= link_to 'Одиночный выбор', new_survey_path(type: 'quiz') %> </li>
              <li> <%= link_to 'Множественный выбор', new_survey_path(type: 'multanswer') %> </li>
              <li> <%= link_to 'Тест с разной оценкой баллов', new_survey_path(type: 'score') %> </li>
            </ul>
          </li>
        </ul>
        <% if current_user %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <p class="navbar-text">
                <b> <%= current_user.email %> </b>
                |
                <%= link_to('Выйти из аккаунта', destroy_user_session_path, method: :delete) %>
              </p>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'shared/gem_header_info' %>
</header>
