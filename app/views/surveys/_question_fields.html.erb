<div class='field clearfix'>
  <hr/>
  <h4>Question</h4>
  <div class='row'>
    <div class='form-group col-sm-4'>
      <%= f.label :text, class: 'sr-only' %>
      <%= f.text_field :text, placeholder: 'question', class: 'form-control' %>
    </div>
  </div>
  <ol class='appendable'>
    <%= f.fields_for :options do |builder| %>
      <%= render 'option_fields', :f => builder %>
    <% end -%>
  </ol>
    <% unless is_opquestion?(@survey.survey_type) %>
        <%= link_to_add_field 'Add option', f, :options %>
    <% end %>
  <%= link_to_remove_field 'Remove question', f %>

</div>
